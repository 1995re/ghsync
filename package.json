{
  "name": "ghsync",
  "version": "0.0.12",
  "description": "Sync local git repository and remote GitHub repository automatically.",
  "bin": {
    "ghsync": "src/cli.js"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "NODE_CONFIG_DIR=./config node src/cli.js run",
    "dev": "NODE_CONFIG_DIR=./config nodemon src/cli.js run",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lt": "lt --port 4949",
    "postinstall": "cp -i config/default.json.placeholder config/default.json ; mkdir -p ~/.ghsync/config && cat ~/.ghsync/config/default.json > ~/.ghsync/config/default.json.bak 2>/dev/null ; ln -sf $(pwd)/config/default.json ~/.ghsync/config/default.json && echo '\n\nPlease confirm the content of \"~/.ghsync/config/default.json\"\n\n'",
    "postuninstall": "rm -rf ~/.ghsync"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ttskch/ghsync.git"
  },
  "keywords": [
    "git",
    "github",
    "auto commit",
    "auto push",
    "auto pull",
    "sync"
  ],
  "author": "ttskch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ttskch/ghsync/issues"
  },
  "homepage": "https://github.com/ttskch/ghsync",
  "dependencies": {
    "chokidar": "^1.6.0",
    "config": "^1.21.0",
    "github-webhook-handler": "^0.4.0",
    "lodash": "^4.16.4",
    "meow": "^3.7.0",
    "nodemailer": "^2.6.4",
    "nodemailer-smtp-transport": "^2.7.2"
  },
  "devDependencies": {
    "localtunnel": "^1.8.1",
    "nodemon": "^1.11.0"
  }
}
