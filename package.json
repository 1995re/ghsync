{
  "name": "ghsync",
  "version": "0.0.16",
  "description": "Sync local git repository and remote GitHub repository automatically.",
  "bin": {
    "ghsync": "src/cli.js"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "NODE_CONFIG_DIR=./config node src/cli.js run",
    "dev": "NODE_CONFIG_DIR=./config nodemon src/cli.js run",
    "test": "jasmine",
    "lt": "lt --port 4949",
    "postinstall": "mkdir -p ~/.ghsync/config && cp config/default.json.placeholder ~/.ghsync/config && test -f ~/.ghsync/config/default.json || cp config/default.json.placeholder ~/.ghsync/config/default.json"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ttskch/ghsync.git"
  },
  "keywords": [
    "git",
    "github",
    "auto commit",
    "auto push",
    "auto pull",
    "sync"
  ],
  "author": "ttskch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ttskch/ghsync/issues"
  },
  "homepage": "https://github.com/ttskch/ghsync",
  "dependencies": {
    "chokidar": "^1.6.0",
    "config": "^1.21.0",
    "github-webhook-handler": "^0.4.0",
    "lodash": "^4.16.4",
    "meow": "^3.7.0",
    "nodemailer": "^2.6.4",
    "nodemailer-smtp-transport": "^2.7.2"
  },
  "devDependencies": {
    "jasmine": "^2.5.2",
    "localtunnel": "^1.8.1",
    "nodemon": "^1.11.0"
  }
}
